# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts (must use LF)
*.sh text eol=lf

# Git hooks (must use LF)
.husky/** text eol=lf

# Windows-specific files
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Package files
package.json text eol=lf
package-lock.json text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

